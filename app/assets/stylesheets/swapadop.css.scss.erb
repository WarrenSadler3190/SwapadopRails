$swapadop_blue: #29ABE2;
$swapadop_yellow: #e2bd29;
$swapadop_green: #79ED56;



@import "font-awesome";

.user-image{
  width: 30px;
  height: 30px;
  border-radius: 100px;
  border: 2px solid white;
}

.main{
  background-image: url("<%= asset_path('swapabackwYeti.png')%>");
  height: 600px;
  background-size:cover;
  width:100%px;
}


#main_logo{
  position: relative;
  margin:100px 0px 0px 0px;
  height: 120px;
}

#logo{
  height:25px;
}

.search{
  width: 200px;
  .icon{
    position: relative;
    left: 150px;
    color:white;
  }
}

.subheader{
  color:#fff;
  font-size: 14px;
}

.alert-box{
  position:absolute;
  z-index: 10;
  width:100%;
}

.section-1{
  padding: 120px;
  background-color:$swapadop_blue;
  height: 600px;
  width:100%;
  p{
    color:white;
  }
}

.section-2{
  background-color:$swapadop_yellow;
  height: 600px;
  width:100%;
}

.footer{
  background-color:$swapadop_green;
  height: 300px;
  width:100%;
}