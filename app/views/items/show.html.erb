<p id="notice"><%= notice %></p>

<div class="row item_show">

  <div class="small-4 columns"><%= image_tag @item.image_url(:market) if @item.image? %>
  </div>

  <div class="small-8 columns">
    <h2><%= @item.title%></h2>
    <p><%= @item.user.email %></p>
    <p><%= format_price(@item.price) %></p>
    <p><%= @item.condition %></p>
    <p><%= link_to 'Make Offer', offers_path(:item_id => @item.id), method: :post, :class=>'button round success' %> </p>
  </div>

</div>

<div class="row item_show">
  <div class="small-12 columns"> 
  <h4 id="offer">Description:</h4>
  <%=@item.desc%></div>
</div>

<% if @item.offers %>
  
  <div class="row">
    <div class="small-12 columns">
      <h4>Offers</h4>
      <ul>
        <% @item.offers.each do |offer| %>
          <li>From: <%= offer.user.email %></li>
        <% end %>
      </ul>
    </div>
  </div>

<% end %>

